<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM" crossorigin="anonymous">
    <title>Document</title>
    <style>
        .container {
            max-width: 800px;
        }

        .table-container {
            width: 100%;
            margin-top: 2rem;
        }

        .table-container table {
            width: 100%;
            
        }
        .heading{
           text-align: center;
        }
    </style>
</head>
<body>
<h1 class=" heading ">URL Shortener</h1>
<div class="container my-4">
    <form action="/shortUrls" method="POST" class="mb-4">
        <div class="row g-3">
            <div class="col-12 col-md">
                <input required placeholder="URL" type="url" name="fullUrl" id="fullUrl" class="form-control">
            </div>
            <div class="col-12 col-md">
                <input required placeholder="Notes" type="text" name="notes" class="form-control">
            </div>
            <div class="col-12 col-md-auto">
                <button class="btn btn-outline-success" type="submit">Shorten</button>
            </div>
        </div>
    </form>

    <form action="/search" method="GET" class="mb-4">
        <div class="row g-3">
            <div class="col-12 col-md">
                <input type="text" name="q" placeholder="Search..." class="form-control">
            </div>
            <div class="col-12 col-md-auto">
                <button class="btn btn-outline-success " type="submit">Search</button>
            </div>
        </div>
    </form>
</div>

<div class="table-container">
    <div class="table-responsive-sm">
    <table class="table table-striped table-bordered" style="width: 100%;">
        <thead class="table-dark">
            <tr>
                <th>Full URL</th>
                <th>Short URL</th>
                <th>Notes</th>
                <th>Clicks</th>
            </tr>
        </thead>
        <tbody>
            <% shortUrls.forEach(shortUrl => { %>
            <tr>
                <td><a href="<%= shortUrl.full %>"><%= shortUrl.full %></a></td>
                <td><a href="<%= shortUrl.short %>"><%= shortUrl.short %></a></td>
                <td><%= shortUrl.notes %></td>
                <td><%= shortUrl.clicks %></td>
            </tr>
            <% }) %>
        </tbody>
    </table>
</div>
</div>

</body>
</html>
